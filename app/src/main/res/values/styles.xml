<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="EditAlarmTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlarmTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/sunrise_bckg</item>

    </style>

    <style name="InfoWindowStyle">
        <item name="android:textAppearance">@style/TextStyle</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/info_window_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextStyle.Dark">
       <item name="android:textColor">@color/color_text_default</item>
    </style>
    <style name="TextStyle.Light">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LargeDigitStyle">
        <item name="android:textSize">@dimen/info_window_text_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SmallDigitStyle">
        <item name="android:textSize">@dimen/info_window_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AlarmTheme.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
