<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".activities.AddAlarmActivity">


    <com.siarhei.alarmus.views.MyRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fillViewport="true"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/float_button_margin"
        android:layout_marginTop="@dimen/float_button_margin"
        android:layout_marginEnd="@dimen/float_button_margin"
        android:layout_marginBottom="@dimen/float_button_margin"
        android:clickable="true"
        android:focusable="auto"
        android:src="@drawable/ic_add2"
        app:backgroundTint="@color/colorPrimaryDark"
        app:backgroundTintMode="add" />

</RelativeLayout>